{
    "root" :
    {
        "children" : 
        [
            {
                "element" : "WiseDiv", "style" : "display: flex; position:fixed; width: 100%; margin-top: -20px; left:0px; background-color: #fff; z-index: 1000; padding: 10px; border: solid 1px #ccc", 
                "children" : 
                [
                    { "element" : "WiseDiv", "style" : "width: 90%" },  
                    { "element": "WiseMenuButton", "id" : "btnSave", "icon" : "/node-simple-note/images/save-icon.png", "text" : "Save", "onclick": "btnSave_onClick" },
                    { "element": "WiseMenuButton", "id" : "btnCancel", "icon" : "/node-simple-note/images/close-icon.png", "text" : "Close", "onclick": "btnClose_onClick" }
                ]
            }
            ,
            {
                "element": "WiseDiv", "style" : "height: 60px"
            }
            ,
            {
                "element" : "WiseDiv", "style" : "display: flex",
                "children" : 
                [
                    { "element": "WiseComboBox", "id": "project", "data" : "project_id", "label" : "Project" },
                    { "element": "WiseComboBox", "id": "category", "data" : "category_id", "label" : "Category" },
                    { "element": "WiseTextBox", "id": "tags", "data" : "tags", "label" : "Tags", "placeholder" : "Enter the tags for the note" }

                   
                ]
            }
            ,
            {
                "element" : "WiseDiv",
                "children" : 
                [
                    { "element": "WiseTextBox", "id": "title", "data" : "title", "label" : "Title", "placeholder" : "Enter the title for the note" }
                   
                ]
            }
            ,
            {
                "element" : "WiseDiv",
                "children" : 
                [
                    { "element": "WiseTextArea", "id": "shortDescription", "data" : "short_desc", "label" : "Short Description", "placeholder" : "Enter short description" }
                   
                ]
            }
            ,
            {
                "element" : "WiseDiv",
                "children" : 
                [
                    { "element": "WiseHtmlEditor", "id": "content", "data" : "content", "label" : "Content", "height": "500px" }
                   
                ]
            }
            ,
            {
                "element": "WiseDiv", "class":"vertical-separator"
            }
        ]
    }
}