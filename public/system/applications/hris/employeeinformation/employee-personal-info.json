        {
            "element" : "WiseDiv", "style" : "display: flex",
            "children" : 
            [
                { "element": "WiseTextBox", "id": "firstName", "data" : "firstName", "label" : "First Name", "placeholder" : "Enter employee's first name" },
                { "element": "WiseTextBox", "id": "middleName", "data" : "middleName", "label" : "Middle Name", "placeholder" : "Enter employee's middle name" }
            ]
        }
        ,
        {
            "element" : "WiseDiv",
            "children" : 
            [
                { "element": "WiseTextBox", "id": "lastName", "data" : "lastName", "label" : "Last Name", "placeholder" : "Enter employee's last name" }
